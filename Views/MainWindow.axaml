<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Omoi.ViewModels"
        xmlns:models="using:Omoi.Models"
        xmlns:behaviors="using:Omoi.Behaviors"
        xmlns:i="clr-namespace:Avalonia.Xaml.Interactivity;assembly=Avalonia.Xaml.Interactivity"
        x:Class="Omoi.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="Omoi"
        Width="1000" Height="750"
        Icon="avares://omoi/icon.ico">

    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_New" Click="NewConversation_Click"/>
                <MenuItem Header="_Save" Click="Save_Click"/>
                <MenuItem Header="Save _As..." Click="SaveAs_Click"/>
                <MenuItem Header="_Load..." Click="Load_Click"/>
                <Separator/>
                <MenuItem Header="_Quit" Click="Quit_Click"/>
            </MenuItem>
            <MenuItem Header="_Model" x:Name="ModelMenu">
                <!-- Model items will be added dynamically in code-behind -->
            </MenuItem>
            <MenuItem Header="_Settings">
                <MenuItem Header="_Integrations..." Click="ShowSettings_Click"/>
            </MenuItem>
            <MenuItem Header="_View">
                <MenuItem Header="Show _Thought Process" 
                          x:Name="ThoughtProcessMenuItem"
                          Click="ShowThoughtProcess_Click"/>
            </MenuItem>
        </Menu>

        <DockPanel>
            <TextBlock DockPanel.Dock="Top"
                       Text="{Binding ErrorMessage}"
                       Foreground="Red"
                       FontSize="10"
                       Padding="10,5"
                       TextWrapping="Wrap"
                       IsVisible="{Binding !!ErrorMessage}"/>

            <Grid DockPanel.Dock="Bottom" Margin="10" ColumnDefinitions="*,Auto">
                <TextBox Grid.Column="0"
                         x:Name="InputTextBox"
                         Text="{Binding InputMessage}"
                         Watermark="Type a message..."
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         MaxHeight="100"
                         IsEnabled="{Binding !IsSending}"/>

                <Button Grid.Column="1"
                        Content="Send"
                        Click="SendMessage_Click"
                        Margin="5,0,0,0"
                        IsEnabled="{Binding !IsSending}"/>
            </Grid>

            <ScrollViewer x:Name="MessageScrollViewer" 
                          VerticalScrollBarVisibility="Auto"
                          Margin="10">
                <ItemsControl ItemsSource="{Binding Messages}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="models:Message">
                            <Border Padding="10" Margin="0,5">
                                <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto">
                                    <Border Grid.Column="0"
                                            Grid.RowSpan="2"
                                            Width="40"
                                            Height="40"
                                            CornerRadius="20"
                                            Background="{Binding IconColor}"
                                            VerticalAlignment="Top"
                                            Margin="0,0,10,0">
                                        <TextBlock Text="{Binding IconText}"
                                                   FontSize="18"
                                                   FontWeight="Bold"
                                                   Foreground="Black"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                    </Border>
                                    
                                    <Grid Grid.Column="1" Grid.Row="0" Margin="0,0,0,5">
                                        <TextBox Text="{Binding Content}"
                                                TextWrapping="Wrap"
                                                IsReadOnly="{Binding !IsEditing}"
                                                BorderThickness="0"
                                                Background="Transparent"
                                                Padding="0">
                                            <i:Interaction.Behaviors>
                                                <behaviors:PendingMessageBehavior />
                                                <behaviors:FocusTrackingBehavior />
                                            </i:Interaction.Behaviors>
                                        </TextBox>
                                        
                                        <Button HorizontalAlignment="Right"
                                                VerticalAlignment="Top"
                                                Margin="5"
                                                Padding="8"
                                                Background="Transparent"
                                                Focusable="False"
                                                Click="EditButton_Click"
                                                Tag="{Binding}"
                                                IsVisible="{Binding ShowEditButton}">
                                            <TextBlock Text="{Binding EditButtonIcon}" FontSize="14"/>
                                        </Button>
                                    </Grid>
                                    
                                    <TextBlock Grid.Column="1"
                                               Grid.Row="1"
                                               Text="{Binding Timestamp, StringFormat='{}{0:HH:mm:ss}'}"
                                               FontSize="10"
                                               Foreground="Gray"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </DockPanel>
    </DockPanel>
</Window>