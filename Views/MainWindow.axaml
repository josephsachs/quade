<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Quade.ViewModels"
        xmlns:models="using:Quade.Models"
        xmlns:behaviors="using:Quade.Behaviors"
        xmlns:i="clr-namespace:Avalonia.Xaml.Interactivity;assembly=Avalonia.Xaml.Interactivity"
        xmlns:LiveMarkdown="using:LiveMarkdown.Avalonia"
        x:Class="Quade.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="Quade"
        Width="1000" Height="750">

    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_New" Click="NewConversation_Click"/>
                <MenuItem Header="_Save" Click="Save_Click"/>
                <MenuItem Header="Save _As..." Click="SaveAs_Click"/>
                <MenuItem Header="_Load..." Click="Load_Click"/>
                <Separator/>
                <MenuItem Header="_Quit" Click="Quit_Click"/>
            </MenuItem>
            <MenuItem Header="_Model" x:Name="ModelMenu">
                <!-- Model items will be added dynamically in code-behind -->
            </MenuItem>
            <MenuItem Header="_View">
                <MenuItem Header="Show _Thought Process" 
                          x:Name="ThoughtProcessMenuItem"
                          Click="ShowThoughtProcess_Click"/>
            </MenuItem>
        </Menu>

        <DockPanel>
            <TextBlock DockPanel.Dock="Top"
                       Text="{Binding ErrorMessage}"
                       Foreground="Red"
                       FontSize="10"
                       Padding="10,5"
                       TextWrapping="Wrap"
                       IsVisible="{Binding !!ErrorMessage}"/>

            <Grid DockPanel.Dock="Bottom" Margin="10" ColumnDefinitions="*,Auto">
                <TextBox Grid.Column="0"
                         x:Name="InputTextBox"
                         Text="{Binding InputMessage}"
                         Watermark="Type a message..."
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         MaxHeight="100"
                         IsEnabled="{Binding !IsSending}"/>

                <Button Grid.Column="1"
                        Content="Send"
                        Click="SendMessage_Click"
                        Margin="5,0,0,0"
                        IsEnabled="{Binding !IsSending}"/>
            </Grid>

            <ListBox x:Name="MessageListBox"
                     ItemsSource="{Binding Messages}"
                     SelectionMode="Single"
                     VerticalAlignment="Stretch"
                     Margin="10">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel/>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.Styles>
                    <Style Selector="ListBoxItem">
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="Margin" Value="0"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Focusable" Value="False"/>
                    </Style>
                    <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
                        <Setter Property="Background" Value="Transparent"/>
                    </Style>
                    <Style Selector="ListBoxItem:selected:focus /template/ ContentPresenter">
                        <Setter Property="Background" Value="Transparent"/>
                    </Style>
                    <Style Selector="ListBoxItem:selected:pointerover /template/ ContentPresenter">
                        <Setter Property="Background" Value="Transparent"/>
                    </Style>
                    <Style Selector="ListBoxItem:pointerover /template/ ContentPresenter">
                        <Setter Property="Background" Value="Transparent"/>
                    </Style>
                </ListBox.Styles>
                <ListBox.ItemTemplate>
                    <DataTemplate DataType="models:Message">
                        <Border Padding="10" Margin="0,5">
                            <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto">
                                <Border Grid.Column="0"
                                        Grid.RowSpan="2"
                                        Width="40"
                                        Height="40"
                                        CornerRadius="20"
                                        Background="{Binding IconColor}"
                                        VerticalAlignment="Top"
                                        Margin="0,0,10,0">
                                    <TextBlock Text="{Binding IconText}"
                                               FontSize="18"
                                               FontWeight="Bold"
                                               Foreground="Black"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Border>
                                <LiveMarkdown:MarkdownRenderer Grid.Column="1"
                                                               Grid.Row="0"
                                                               Margin="0,0,0,5">
                                    <i:Interaction.Behaviors>
                                        <behaviors:MarkdownBuilderBehavior />
                                        <behaviors:PendingMessageBehavior />
                                    </i:Interaction.Behaviors>
                                </LiveMarkdown:MarkdownRenderer>
                                <TextBlock Grid.Column="1"
                                           Grid.Row="1"
                                           Text="{Binding Timestamp, StringFormat='{}{0:HH:mm:ss}'}"
                                           FontSize="10"
                                           Foreground="Gray"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </DockPanel>
    </DockPanel>
</Window>