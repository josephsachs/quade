<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Quade.ViewModels"
        x:Class="Quade.Views.ApiKeySetupWindow"
        x:DataType="vm:ApiKeySetupViewModel"
        Title="API Key Setup"
        Width="500" Height="250"
        CanResize="False"
        WindowStartupLocation="CenterScreen">

    <StackPanel Margin="20" Spacing="15">
        <TextBlock Text="Anthropic API Key Required"
                   FontSize="18"
                   FontWeight="Bold"/>
        
        <TextBlock Text="Enter your Anthropic API key to continue. It will be stored securely in ~/.quade/config.json"
                   TextWrapping="Wrap"/>
        
        <TextBox Text="{Binding ApiKey}"
                 Watermark="sk-ant-..."
                 PasswordChar="â€¢"
                 IsEnabled="{Binding !IsValidating}"/>
        
        <TextBlock Text="{Binding ErrorMessage}"
                  Foreground="Red"
                  TextWrapping="Wrap"/>
        
        <Button Content="Save and Continue"
                Click="OnSaveClick"
                HorizontalAlignment="Right"
                IsEnabled="{Binding !IsValidating}"/>
    </StackPanel>
</Window>